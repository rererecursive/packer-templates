{
  "builders": [{
    "type": "amazon-ebs",
    "name": "{{ user `client`}}-{{ user `role` }}-{{ isotime \"2006-01-02\" }}",
    "region": "{{ user `region` }}",
    "source_ami": "{{ user `source_ami` }}",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "{{ user `source_ami_name` }}",
        "root-device-type": "ebs"
      },
      "owners": ["{{ user `source_ami_owner` }}"],
      "most_recent": true
    },
    "instance_type": "{{ user `instance_type` }}",
    "iam_instance_profile":"{{ user `packer_instance_profile`}}",
    "ami_name": "{{ build_name }}",
    "ami_regions": "{{ user `ami_regions`}}",
    "ami_users": "{{ user `ami_users`}}",
    "access_key": "{{ user `access_key` }}",
    "secret_key": "{{ user `secret_key` }}",
    "vpc_id": "{{ user `vpc_id` }}",
    "subnet_id": "{{ user `subnet_id` }}",
    "ssh_username": "{{ user `ssh_username` }}",
    "ssh_pty": true,
    "security_group_id": "{{ user `security_group` }}",
    "ssh_timeout":"{{ user `ssh_timeout`}}",
    "run_tags": {
      "Name": "Packer {{ user `role` }}-{{ user `build_no` }} (Amazon Linux)",
      "SourceAMI": "{{ .SourceAMI  }}",
      "SourceAMIName": "{{ .SourceAMIName  }}",
      "BuildNumber": "{{ user `build_no`}}",
      "ChefRepoCommit": "{{ user `chef_repo_commit`  }}",
      "ChefRepoBranch": "{{ user `chef_repo_branch` }}",
      "PackerTemplateName": "{{ user `packer_template` }}",
      "Status": "Baking"
    },
    "tags": {
      "Name": "{{ user `ami_name` }}",
      "SourceAMI": "{{ .SourceAMI  }}",
      "SourceAMIName": "{{ .SourceAMIName  }}",
      "BuildNumber": "{{ user `build_no`}}",
      "ChefRepoCommit": "{{ user `chef_repo_commit`  }}",
      "ChefRepoBranch": "{{ user `chef_repo_branch` }}",
      "PackerTemplateName": "{{ user `packer_template` }}",
      "Status": "Baked"
    },
    "ami_block_device_mappings": [ {
      "device_name": "{{ user `device_name` }}",
      "volume_size": "{{ user `bake_volume_size` }}",
      "delete_on_termination": true,
      "volume_type": "gp2"
    } ],
    "launch_block_device_mappings": [ {
      "device_name": "{{ user `device_name` }}",
      "volume_size": "{{ user `bake_volume_size` }}",
      "delete_on_termination": true,
      "volume_type": "gp2"
    } ]
  }],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "if [ ! -z \"{{user `shutdown_timeout`}}\" ]; then shutdown -P +{{ user `shutdown_timeout` }}; fi"
    },
    {
      "type": "shell",
      "inline": ["sudo mkdir -p /etc/chef",
        "sudo chmod -R 777 /etc/chef",
        "mkdir -p /tmp/packer-chef-client/",
        "chmod 0755 /tmp/packer-chef-client"
      ]
    },
    {
      "type": "chef-client",
      "execute_command": "cd /etc/chef && sudo chef-client --local-mode --no-color -c /tmp/packer-chef-client/client.rb -j /tmp/packer-chef-client/first-boot.json --log_level error",
      "install_command": "curl -L https://omnitruck.chef.io/install.sh | sudo bash -s -- -v {{user `chef_version`}}",
      "prevent_sudo": false,
      "skip_install": false,
      "skip_clean_node": true,
      "skip_clean_client": true,
      "server_url": "http://localhost:8889",
      "ssl_verify_mode": "verify_none",
      "node_name": "{{user `client`}}-packer-{{user `ami_name`}}-{{uuid}}",
      "run_list": [ "{{user `chef_run_list`}}" ],
      "json": {
        "{{user `client`}}": {
          "app_build_no": "{{user `build_no`}}",
          "app_build_sha": "{{user `build_sha`}}"
        }
      }
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "artifacts.json",
      "strip_path": true
    },
    {
      "type": "shell-local",
      "inline": [
        "jq -r '.builds[] | (.artifact_id + \" \" + .name)' artifacts.json | sed 's/:/: /' | sed 's/ /\n  /g' > builds.json"
      ]
    },
    {
      "type": "shell-local",
      "environment_vars": ["SOURCE_AMI={{ .SourceAMI }}"],
      "script": "scripts/linux/tag-amis.sh"
    }
  ],
  "variables": {
    "access_key": "",
    "ami_regions":"",
    "ami_users":"",
    "client": "",
    "bake_volume_size":"8",
    "build_no": "",
    "build_sha": "",
    "chef_repo_branch": "",
    "chef_repo_commit": "",
    "chef_run_list":"",
    "chef_version":"latest",
    "device_name":"/dev/xvda",
    "instance_type": "m4.large",
    "packer_instance_profile":"packer",
    "packer_role":"packer",
    "packer_template": "",
    "region": "",
    "role": "",
    "secret_key": "",
    "security_group": "",
    "shutdown_timeout": "",
    "source_ami": "",
    "source_ami_owner": "",
    "source_ami_name": "",
    "ssh_timeout":"5m",
    "ssh_username":"ec2-user",
    "subnet_id": "" ,
    "vpc_id": ""
  }
}
